#!/bin/sh
set -e

case "$1" in
    configure)
        echo "Installing TASCI font..."
        fc-cache -f -v
        echo ""
        echo "TASCI installed successfully."
        echo "Run 'tasci' to start the editor."
        ;;
    abort-upgrade|abort-remove|abort-deconfigure)
        ;;
    *)
        echo "postinst called with unknown argument $1" >&2
        exit 1
        ;;
esac

exit 0
